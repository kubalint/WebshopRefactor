        </dt>

        <dd>
            @Html.DisplayFor(model => model.Available)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Photo)
        </dt>

        <dd>
            @{
                if (Model.PhotoId != null)
                {
                    <img src="@Url.Action("GetImage", "Products", new {id=Model.PhotoId})" height="200">
                }
                else
                {
                    <img src="~/Images/DefaultImage/defaultImage.jpg" height="200">
                }
            }
        </dd>

    </dl>
</div>

